<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                       
                                                                
           

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp" android:tag="layout/row_product_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IVImg"
                android:tag="binding_1"      
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="centerCrop"
                android:src="@color/design_default_color_background" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TVName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:tag="binding_2"           
                app:layout_constraintBottom_toTopOf="@id/TVPrice"
                app:layout_constraintStart_toEndOf="@id/IVImg"
                app:layout_constraintTop_toTopOf="@id/IVImg"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TVPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:tag="binding_3"            
                app:layout_constraintBottom_toBottomOf="@id/IVImg"
                app:layout_constraintStart_toStartOf="@id/TVName"
                app:layout_constraintTop_toBottomOf="@id/TVName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
         